<!--/////////// MY Profile ///////////-->

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>User Profile</title>
	<link href="StyleSheets/PProfile.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Dancing+Script|Lobster|Pacifico" rel="stylesheet">
</head>
<body>
	<div class="wholepage">
	<h1>Account Details, Your own posts in one place etc....</h1>
	<br>

<h2>Feed</h2>

<form method="POST" action="/sign-out">
        
    <input id="sign-out" type="Submit" name="Sign Out">
    
    </form>

<br>

	<div class="posts_feed">
		<% @blogpost.each do |post| %>
            <p>Title: <%= post.title %></p>

            <p>Category:<%= post.category%></p>
            <p>  <%= post.blogpost%></p>
            <p>Username: <%=post.user_id%></p>
            <p>Created:<%=post.created_at%></p>
                
                <% end %>
	</div>
	   <div class="TextContainer">

    <h2 class="BL">Blogging Is Life</h2>
    <p1 class="Writedown">Write down your reviews</p1>
    </div>
  
    <!-- Trigger/Open The Modal -->
<button id="myBtn" class="button">Start New Blog</button>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>Food.Life.Blogs.</p>
    <select>
  <option value="Appetizers">Appetizers</option>
  <option value="Drinks/Cocktails">Drinks/Cocktails</option>
  <option value="Entrees">Entrees</option>
  <option value="Desserts">Desserts</option>
</select>
    <input type="text" name="title" value="Title">
    <textarea id="MText" rows="8" cols="75"></textarea>
    <input type="submit" name="submit">
</div>
</div>
  </div>
  <div class="update">
  <form method="POST" action="/update_info">
    
  <input type="button" value="update profile">
  </form>
  </div>
  <div class="editblog">
  <form method="POST" action="/update_blog">
  <input type="submit" value="update blogpost">
  </form>
  </div>


   <script type="text/javascript" src="JavaScript/Main.js"></script>
</body>
</html>