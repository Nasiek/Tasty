    <div id="BlogPost" class="CC">
        <div class="post">
            <form method="POST" action="/create_message">
                <p1>Category</p1>
                <input type="text" name="[create]category" onfocus="this.value=''" placeholder="category">
                <br>
                <p2>Title</p2>
                <input type="text" name="[create]title" onfocus="this.value=''" placeholder="What would you like me to be called?">
                <br>
                <p3>Post Content</p3>
                <input type="text" name="[create]blogpost" onfocus="this.value=''" placeholder="Post Something Tasty">
                <br>
                <input type="hidden" name="[create]user_id" value="<%= @current_user.id %>">
                <input type="Submit" name="Submit">
            </form>
