</head>

<body>
    <form method="POST" action="/sign-out">
        
    <input class="OUT" id="sign-out" type="Submit" value="sign Out">
    
    </form>
        <h2 class="FoodHead">Welcome to your food journey,<%= @current_user.uname %>!</h2>


<div id="POST_FEED" class="postfeed">
    <div class="blogtitle">
<% @blogpost.each do |post| %>
    <h3><%= post.title %></h3>
    </div>
    <div class="category">
    <p>
        <%= post.category %>
    </p>
  </div>
    <div id="blogpost_contentbox" class="contentbox"></div>
    <p ><%= post.blogpost%>
        
    </p>
<% end %>
</div>
